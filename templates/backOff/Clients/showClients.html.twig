{% extends "base.html.twig" %}

{% block body %}

    <h1> Projet 2 web : site de vente Espace Admin </h1>

    <div class="row">
        <div class="col-7">
            Liste des clients
            <table class="table table-bordered">
                <caption>Liste des clients</caption>
                <thead>
                <tr><th>nom</th><th>adresse mail</th><th>code postal</th><th>ville</th><th>Action</th></tr>
                </thead>
                <tbody>
                {% for client in clients if client is not empty %}

                    <tr>
                        <td>{{client.username}}</td>
                        <td>{{client.email}}</td>
                        <td>{{client.codePostal}}</td>
                        <td>{{client.ville}}</td>
                        <td><a href="{{ path('Client.delete', {id: client.id, user: client.username}) }}"  class="btn btn-primary m-1 p-1">Supprimer</a></td>
                    </tr>
                {% endfor %}
                <tbody>
            </table>
        </div>
    </div>

{% endblock %}