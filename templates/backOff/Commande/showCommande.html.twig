{% extends "base.html.twig" %}

{% block body %}

    <h1> Projet 2 web : site de vente Espace Admin </h1>

    <div class="row">
        <div class="col-7">
            Liste des commandes
            <table class="table table-bordered">
                <caption>Liste des commandes</caption>
                <thead>
                <tr><th>id</th><th>nom client</th><th>adresse mail</th><th>date</th><th>etat</th><th>Action</th></tr>
                </thead>
                <tbody>
                {% for commande in commandes if commande is not empty %}

                    <tr>
                        <td>{{ commande.id }}</td>
                        <td>{{commande.user.username}}</td>
                        <td>{{ commande.user.email }}</td>
                        <td>{{commande.date | date('d-m-Y')}}</td>
                        <td>{{commande.etat.nom}}</td>
                        <td><a href="{{ path('Commande.expedier', { id: commande.id }) }}">Exp√©dier</a></td>
                    </tr>
                {% endfor %}
                <tbody>
            </table>
        </div>
    </div>

{% endblock %}